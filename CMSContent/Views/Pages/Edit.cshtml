@model CMSContent.Models.Page

@{
    ViewData["Title"] = " ویرایش صفحه";
}

<h1><i class="fas fa-edit"></i> @ViewData["Title"]</h1>

@* <h4>Page</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageID" />
            <div class="form-group">
                <label asp-for="PageGroupID" class="control-label"></label>
                <select asp-for="PageGroupID" class="form-control" asp-items="ViewBag.PageGroupID"></select>
                <span asp-validation-for="PageGroupID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageTitle" class="control-label"></label>
                <input asp-for="PageTitle" class="form-control" />
                <span asp-validation-for="PageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageShortText" class="control-label"></label>
                <textarea asp-for="PageShortText" class="form-control"></textarea>
                <span asp-validation-for="PageShortText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageText" class="control-label"></label>
                <textarea asp-for="PageText" class="form-control"></textarea>
                <span asp-validation-for="PageText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageDate" class="control-label"></label>
                <input asp-for="PageDate" class="form-control" type="datetime" />
                <span asp-validation-for="PageDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PageIsPublished" /> @Html.DisplayNameFor(model => model.PageIsPublished)
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> ثبت ویرایش</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-long-arrow-alt-left"></i> بازگشت</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
