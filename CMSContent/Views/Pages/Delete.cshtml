@model CMSContent.Models.Page

@{
    ViewData["Title"] = " حذف صفحه";
}

<h1><i class="fas fa-trash"></i> @ViewData["Title"]</h1>

<h3>آیا از حذف این صفحه اطمینان دارید؟</h3>
<div>
    @* <h4>Page</h4> *@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageShortText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageShortText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageIsPublished)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageIsPublished)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageGroup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageGroup.PageGroupTitle)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PageID" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> حذف</button>
        <a asp-action="Index" class="btn btn-secondary"> بازگشت</a>
    </form>
</div>
