@model Page

<h1>@Model.PageTitle</h1>
<div class="alert alert-secondary" role="alert">
    <p>@Model.PageShortText</p>
</div>
<p>
    @Model.PageText
</p>
<p>تاریخ صفحه: @Model.PageDate.ToString("dddd d MMMM yyyy")</p>
<p>&nbsp;</p>
@if (Model.Comments.Any())
{
    <h4>نظرات: </h4>
    @foreach (Comment comment in Model.Comments)
    {
        <div class="col-md-12" id="comment(@comment.CommentID)">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">@comment.AuthorName (@comment.CommentDate.ToString("dddd d MMMM yyyy ساعت: hh:mm"))</h5>
                    <p class="card-text">@comment.CommentText</p>
                </div>
            </div>
        </div>
    }
}
