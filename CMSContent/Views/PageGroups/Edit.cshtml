@model CMSContent.Models.PageGroup

@{
    ViewData["Title"] = "ویرایش دسته بندی";
}

<h1><i class="fas fa-edit"></i> @ViewData["Title"]</h1>

@* <h4>PageGroup</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageGroupID" />
            <div class="form-group">
                <label asp-for="PageGroupTitle" class="control-label"></label>
                <input asp-for="PageGroupTitle" class="form-control" />
                <span asp-validation-for="PageGroupTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> ثبت ویرایش</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-long-arrow-alt-left"></i> بازگشت</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
